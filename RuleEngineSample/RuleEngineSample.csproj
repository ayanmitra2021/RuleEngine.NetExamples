    <Content Include="rules\discount.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="rules\eligibility.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
