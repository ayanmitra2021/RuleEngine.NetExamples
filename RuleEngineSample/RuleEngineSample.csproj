    <None Remove="rules\eligibilityIIf.json" />
    <None Remove="rules\eligibilityplus.json" />
    <None Remove="rules\ltaSalary.json" />
    <None Remove="rules\ltaSalaryV2.json" />
    <None Remove="rules\pension.json" />
    <None Remove="rules\rulewithaction.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="rules\andalso.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
